    "version": "0.2.0",
    "configurations": [
        {
            "name": "gbemu",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "run",
                    "--bin=gbemu",
                ]
            },
            "env": {
                "RUST_BACKTRACE": "1",
                "RUST_LOG": "debug",
            },
        },
        {
            "name": "gbemu: tests",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "test",
                    "--bin=gbemu",
                ]
            },
            "env": {
                "RUST_BACKTRACE": "1",
                "RUST_LOG": "trace",
            },
        },
        {
            "name": "gbemu_hardware: tests",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "test",
                    "--lib",
                ]
            },
            "env": {
                "RUST_BACKTRACE": "1",
                "RUST_LOG": "trace",
            },
        },
    ]
}
