    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug executable 'gbemu'",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "run",
                    "--bin=gbemu"
                ]
            },
            "env": {
                "RUST_BACKTRACE": "1",
                "RUST_LOG": "debug"
            }
        },
        {
            "name": "Debug unit tests in executable 'gbemu'",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "test",
                    "--bin=gbemu"
                ]
            },
            "env": {
                "RUST_BACKTRACE": "1",
                "RUST_LOG": "trace"
            }
        }
    ]
}